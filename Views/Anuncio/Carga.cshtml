@model AnuncioViewModel

@{
    ViewData["Title"] = "Crea un nuevo Anuncio";
}

<div>
    <h3>Crear nuevo anuncio</h3>
    @if (User.Identity is not null && User.Identity.IsAuthenticated)
    {

        <form method="post" class="row row-cols-lg-auto g-5 align-items-center">
            
            <div class="col-12">
                <label asp-for="Descripcion" class="form-label"></label>
                @* <input type="text" class="form-control" id="Descripcion" name="Descripcion" placeholder="Descripcion del Anuncio"> *@
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="col-12">
                @* <input type="date" class="form-control" id="FechaDesde" name="FechaDesde" placeholder="Fecha Desde" is-accept-old-day="false" /> *@
                <label asp-for="FechaDesde" class="form-label"></label>
                <input asp-for="FechaDesde" class="form-control"/>
