            </div>
            <div class="col-12">
                @* <input type="date" class="form-control" id="FechaHasta" name="FechaHasta" placeholder="Fecha Hasta" is-accept-old-day="false" /> *@
                <label asp-for="FechaHasta" class="form-label"></label>
                <input asp-for="FechaHasta" class="form-control" />
                <span asp-validation-for="FechaHasta" class="text-danger"></span>
            </div>
            <div class="col-12">
                @* <input type="text" class="form-control" id="Precio" name="Precio" placeholder="Precio"> *@
                <label asp-for="Precio" class="form-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Crear anuncio</button>
            </div>
        </form>
