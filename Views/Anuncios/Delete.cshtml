@model Wallaboo.Entities.Anuncio

@{
    ViewData["Title"] = "Eliminar Anuncio";
}
@if (User.Identity is not null && User.Identity.IsAuthenticated)
{
<div class="text-center mb-4">
    <h2>Eliminar Anuncio</h2>
    @* <h3>¿Está seguro de eliminar este anuncio?</h3> *@
</div>

<div class="container">
    <h4>Anuncio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaDesde)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaDesde)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaHasta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaHasta)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
    </dl>

    <br />
    <form asp-action="Delete" onsubmit="return confirmDelete();">
        <input type="hidden" asp-for="Id" />
        <div class="row mb-3">
            <div class="col-md-6 text-center">
                <input type="submit" value="Eliminar" class="btn btn-danger " />
            </div>
            <div class="col-md-6 text-center">
                <a asp-action="Index" class="btn btn-primary">Inicio</a>
            </div>
        </div>
    </form>
</div>

<script>
    function confirmDelete() {
        return confirm("¿Estás seguro de que deseas eliminar este anuncio?");
    }
</script>

}
else
{
    <div class="text-center">
        <h3>¡Inicia sesión para crear y visualizar anuncios!</h3>
    </div>
}

