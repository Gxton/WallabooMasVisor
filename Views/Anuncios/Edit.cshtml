@model Wallaboo.Entities.Anuncio

@{
    ViewData["Title"] = "Edita tu anuncio";
}

<div class="text-center mb-4">
    <h2>Edita tu anuncio</h2>    
    <hr />
</div>

@if (User.Identity is not null && User.Identity.IsAuthenticated)
{
    <div class="container d-flex justify-content-center">
        <div class="col-md-8">
            <h5 class="alert text-danger">@ViewBag.Msg</h5>
            <form asp-action="Edit" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Descripcion" class="form-label"></label>
                    </div>
                    <div class="col-md-8">
                        @Html.TextArea("Descripcion", null, new { @class = "form-control" })
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
@*                     <div class="col-md-4">
                        <label asp-for="TenantId" class="form-label" type="hidden"></label>
                    </div> *@
                    <div class="col-md-8">
                        <input asp-for="TenantId" class="form-control" type="hidden" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="FechaDesde" class="form-label"></label>
                    </div>
                    <div class="col-md-4">
                        <!-- Reducido el tamaño de la columna -->
                        <input asp-for="FechaDesde" class="form-control" />
                        <span asp-validation-for="FechaDesde" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="FechaHasta" class="form-label"></label>
                    </div>
                    <div class="col-md-4">
                        <!-- Reducido el tamaño de la columna -->
                        <input asp-for="FechaHasta" class="form-control" />
                        <span asp-validation-for="FechaHasta" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Precio" class="form-label">$:</label> <!-- Añadido signo de moneda en el label -->
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Precio" class="form-control"  />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="CantidadDias" class="form-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="CantidadDias" class="form-control" readonly="readonly" />
                        <span asp-validation-for="CantidadDias" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6 text-center">
                        <input type="submit" value="Guardar" class="btn btn-success " /> <!-- Añadido btn-fixed -->
                    </div>
                </div>
            </form>

            <div class="mt-3">
                <a asp-action="index" class="btn btn-secondary btn-fixed">Cancelar</a> <!-- añadido btn-fixed -->
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <h3>¡Inicia sesión para poder crear y visualizar anuncios!</h3>
    </div>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
