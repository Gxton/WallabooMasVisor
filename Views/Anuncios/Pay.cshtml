@* @model Wallaboo.Entities.Anuncio *@
@model PagoViewModel

@{
    ViewData["Title"] = "Pagar";
}

<div class="text-center mb-4">
    <h2>Pagar Anuncio</h2>
</div>

@if (User.Identity is not null && User.Identity.IsAuthenticated)
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 bg-light p-4 rounded">
                <form asp-action="Pay" onsubmit="return confirmPayment();">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="amount" class="control-label"></label>
                        <input asp-for="amount" class="form-control" readonly="readonly" value="@ViewBag.Total" />
                        <span asp-validation-for="amount" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="description" class="control-label"></label>
                        <input asp-for="description" class="form-control" readonly="readonly" value="@ViewBag.Texto" />
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="cardNumber" class="control-label"></label>
                        <input asp-for="cardNumber" class="form-control" inputmode="numeric" maxlength="19" style="width: 100%;" placeholder="XXXX-XXXX-XXXX-XXXX" oninput="maskCardNumber(this)" />
                        <span asp-validation-for="cardNumber" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col">
                            <label asp-for="expirationMonth" class="control-label"></label>
                            <input asp-for="expirationMonth" class="form-control" inputmode="numeric" maxlength="2" style="width: 100%;" placeholder="MM" />
                            <span asp-validation-for="expirationMonth" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="expirationYear" class="control-label"></label>
                            <input asp-for="expirationYear" class="form-control" inputmode="numeric" maxlength="2" style="width: 100%;" placeholder="AA" />
                            <span asp-validation-for="expirationYear" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="cardholderName" class="control-label"></label>
                        <input asp-for="cardholderName" class="form-control" style="width: 100%;" />
                        <span asp-validation-for="cardholderName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="securityCode" class="control-label"></label>
                        <input asp-for="securityCode" class="form-control" inputmode="numeric" maxlength="3" style="width: 100%;" placeholder="CVC" />
                        <span asp-validation-for="securityCode" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="email" class="control-label"></label>
                        <input type="email" asp-for="email" class="form-control" style="width: 100%;" oninput="maskEmail(this)" placeholder="ejemplo@dominio.com" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                    <div class=" row mb-3 justify-content-center">
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary">Cancelar</a>
                        </div>                    
                        <div class="form-group col">
                            <input type="submit" value="Pagar" class="btn btn-success" />
                        </div>
                    </div>
                </form>
        </div>
            <h3 class="text-center mt-3">Sus datos de tarjeta se procesarán de forma segura y no serán almacenados en nuestros servidores.</h3>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <h3>¡Inicia sesión para crear y visualizar anuncios!</h3>
    </div>
}

<script>
    function confirmPayment() {
        return confirm("¿Estás seguro de que deseas proceder con el pago?");
    }

    function maskCardNumber(input) {
        // Quitar todos los caracteres que no sean dígitos
        let value = input.value.replace(/\D/g, '');

        // Añadir guiones cada 4 dígitos
        let formattedValue = '';
        for (let i = 0; i < value.length; i++) {
            if (i > 0 && i % 4 === 0) {
                formattedValue += '-';
            }
            formattedValue += value[i];
        }

        input.value = formattedValue.slice(0, 19); // Limitar a 19 caracteres
    }

    function maskEmail(input) {
        // Se podría aplicar una lógica adicional si es necesario
        // Pero generalmente el input type="email" ya verifica el formato.
    }
</script>


