<div>
    <h3>Anuncios</h3>
    @if (User.Identity is not null && User.Identity.IsAuthenticated)
    {

        <form method="post" class="row row-cols-lg-auto g-3 align-items-center">
            <div class="col-12">
                <input type="text" class="form-control" id="Descripcion" name="Descripcion" placeholder="Descripcion del Anuncio">
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">Crear anuncio</button>
            </div>
        </form>

        <ul>
            @foreach (var anuncio in Model.Anuncios)
            {
                <li>@anuncio.Descripcion</li>
            }
        </ul>
    }
    else
    {
        <p>Logueate para que puedas crear y visualizar productos!</p>
    }

</div>

<div>
    <h3>Países</h3>
    <ul>
        @foreach (var país in Model.Paises)
        {
            <li>@país.NombrePais</li>
        }
    </ul>
</div>
