@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h5 class="card-title">Información del Perfil</h5>
                </div>
                <div class="card-body">
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control" placeholder="Selecciona nombre de usuario." disabled />
                            <label asp-for="Username" class="form-label"></label>
                        </div>
                        @*
                        <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Por favor, introduce tu número de teléfono."/>
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        *@
                        <button id="update-profile-button" type="submit" class="btn btn-custom w-100">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
